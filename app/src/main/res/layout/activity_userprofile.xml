<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activity.UserProfileActivity">


    <!-- Toolbar-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/MyToolbarStyle"
        app:titleTextColor="@color/white">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chub"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Yükleniyor -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_round"
        android:elevation="10dp"
        android:padding="10dp"
        android:visibility="gone" />


    <!-- ScrollView-->
    <ScrollView
        android:id="@+id/ScrollView_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/crypto_show" />

            <!-- My Profil-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                card_view:cardBackgroundColor="#D9440875"
                card_view:cardCornerRadius="20dp"
                card_view:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/chub"
                        android:text="Profil"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:elevation="2dp"
                        card_view:cardBackgroundColor="#20044E"
                        card_view:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/chur"
                                android:maxLines="5"
                                android:text="Yükleniyor..."
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="10dp"
                                android:background="#61FFFFFF" />

                            <TextView
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/chur"
                                android:maxLines="5"
                                android:text="Yükleniyor..."
                                android:textColor="@color/white"
                                android:textSize="18sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            card_view:cardBackgroundColor="#EAB925"
                            card_view:cardCornerRadius="10dp">

                            <Button
                                android:id="@+id/button_editProfile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/chub"
                                android:text="Profili Düzenle"
                                android:textColor="@color/white"
                                android:textSize="13sp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            card_view:cardBackgroundColor="#3AC579"
                            card_view:cardCornerRadius="10dp">

                            <Button
                                android:id="@+id/button_editEmail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/chub"
                                android:text="E-posta Düzenle"
                                android:textColor="@color/white"
                                android:textSize="13sp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        card_view:cardBackgroundColor="#355BC5"
                        card_view:cardCornerRadius="10dp">

                        <Button
                            android:id="@+id/button_changePassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/chub"
                            android:text="Şifre Değiştir"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="30dp"
                        card_view:cardBackgroundColor="#FF6061"
                        card_view:cardCornerRadius="10dp">

                        <Button
                            android:id="@+id/button_DeleteUser"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/chub"
                            android:text="Hesabı Sil"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- E-posta düzenle-->
            <LinearLayout
                android:id="@+id/Show_edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- yetkilendirme e-postası-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_inner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    card_view:cardBackgroundColor="#CE48097C"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/chub"
                            android:text="E-posta Düzenle"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="23sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/chur"
                            android:text="Onaylamak ve devam etmek için lütfen mevcut e-posta adresinizi ve şifrenizi girin."
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/chub"
                                android:text="Geçerli E-posta:"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_email"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                app:hintEnabled="false">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/textView_update_email_old"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/edittextbox"
                                    android:fontFamily="@font/chur"
                                    android:hint="Mevcut e-postayı giriniz..."
                                    android:inputType="textPersonName"
                                    android:paddingStart="20dp"
                                    android:textColor="@color/white"
                                    android:textColorHint="#C0C0C0"
                                    android:textCursorDrawable="@null"
                                    android:textSize="14sp"
                                    tools:ignore="RtlSymmetry" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/chub"
                                android:text="Mevcut Şifre:"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_password"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                app:hintEnabled="false">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editText_update_password_v"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/edittextbox"
                                    android:fontFamily="@font/chur"
                                    android:hint="Mevcut şifreyi giriniz..."
                                    android:inputType="textPassword"
                                    android:paddingStart="20dp"
                                    android:textColor="@color/white"
                                    android:textColorHint="#C0C0C0"
                                    android:textCursorDrawable="@null"
                                    android:textSize="14sp"
                                    tools:ignore="RtlSymmetry" />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <!-- doğrula butonu-->

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            card_view:cardBackgroundColor="#4CAF50"
                            card_view:cardCornerRadius="10dp">

                            <Button
                                android:id="@+id/Button_authenticate_user"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/chub"
                                android:text="Doğrula"
                                android:textColor="@color/white"
                                android:textSize="15sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- yeni e-posta-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_inner01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    card_view:cardBackgroundColor="#CE48097C"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/textView_update_email_new_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/chub"
                            android:text="Doğrulamayı Düzenle"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="23sp" />

                        <TextView
                            android:id="@+id/textView_update_email_authenticated_a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/chur"
                            android:text="Lütfen onay için e-postayı kontrol edin."
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/chub"
                            android:text="Yeni E-posta:"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_email_new"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:hintEnabled="false">

                            <!-- email giriş    -->
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText_update_email_new"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/edittextbox"
                                android:fontFamily="@font/chur"
                                android:hint="İstediğiniz yeni e-posta adresini girin..."
                                android:inputType="textPersonName"
                                android:paddingStart="20dp"
                                android:textColor="@color/white"
                                android:textColorHint="#C0C0C0"
                                android:textCursorDrawable="@null"
                                android:textSize="14sp"
                                tools:ignore="RtlSymmetry" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- doğrula butonu-->

                        <androidx.cardview.widget.CardView
                            android:id="@+id/buttonUpdateEmailCardView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            card_view:cardBackgroundColor="#C1C1C1"
                            card_view:cardCornerRadius="10dp">

                            <Button
                                android:id="@+id/ButtonUpdateEmail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/chub"
                                android:text="E-postayı Onayla"
                                android:textColor="@color/white"
                                android:textSize="15sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Şifre Değiştir-->
            <LinearLayout
                android:id="@+id/Show_Change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    card_view:cardBackgroundColor="#CE48097C"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/chub"
                            android:text="Şifre Değiştir"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="23sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/chur"
                            android:text="Şifrenizi değiştirmek için lütfen mevcut şifrenizi giriniz."
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/chub"
                                android:text="Mevcut Şifre:"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_password_CP"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                app:hintEnabled="false">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editText_change_password_current"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/edittextbox"
                                    android:fontFamily="@font/chur"
                                    android:hint="Mevcut şifreyi giriniz..."
                                    android:inputType="textPassword"
                                    android:paddingStart="20dp"
                                    android:textColor="@color/white"
                                    android:textColorHint="#C0C0C0"
                                    android:textCursorDrawable="@null"
                                    android:textSize="14sp"
                                    tools:ignore="RtlSymmetry" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Doğrulama butonu-->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            card_view:cardBackgroundColor="#4CAF50"
                            card_view:cardCornerRadius="10dp">

                            <Button
                                android:id="@+id/Button_change_password_authenticate_user"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/chub"
                                android:text="Doğrula"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    card_view:cardBackgroundColor="#CE48097C"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/chub"
                            android:text="Şifre Doğrula"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="23sp" />

                        <TextView
                            android:id="@+id/textView_change_password_authenticated"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/chub"
                            android:text="Lütfen onaylamak için kontrol edin."
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/chub"
                            android:text="Yeni Şifre:"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_password_new"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText_change_password_new"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/edittextbox"
                                android:fontFamily="@font/chur"
                                android:hint="Yeni şifreyi giriniz..."
                                android:inputType="textPassword"
                                android:paddingStart="20dp"
                                android:textColor="@color/white"
                                android:textColorHint="#C0C0C0"
                                android:textCursorDrawable="@null"
                                android:textSize="14sp"
                                tools:ignore="RtlSymmetry" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/chub"
                            android:text="Yeni Şifreyi Onayla:"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_password_new_confirm"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText_change_password_new_confirm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/edittextbox"
                                android:fontFamily="@font/chur"
                                android:hint="Yeni şifreyi onaylayınız..."
                                android:inputType="textPassword"
                                android:paddingStart="20dp"
                                android:textColor="@color/white"
                                android:textColorHint="#C0C0C0"
                                android:textCursorDrawable="@null"
                                android:textSize="14sp"
                                tools:ignore="RtlSymmetry" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Şifreyi değiştirdiğini onaylama butonu-->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/ButtonChangePasswordCardView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            card_view:cardBackgroundColor="#C1C1C1"
                            card_view:cardCornerRadius="10dp">

                            <Button
                                android:id="@+id/ButtonChangePassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/chub"
                                android:text="Şifreyi Onayla"
                                android:textColor="@color/white"
                                android:textSize="15sp" />


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <!-- Kullanıcı Sil-->
            <LinearLayout
                android:id="@+id/Show_Delete_Account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    card_view:cardBackgroundColor="#CE48097C"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/chub"
                            android:text="Hesabı Sil"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="23sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/chur"
                            android:text="Hesabınızı silmek istediğinizden emin misiniz? Hesabınızı silerseniz, tüm verileriniz silinir ve kurtarılamaz."
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/chub"
                                android:text="Mevcut Şifre:"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_password_Auth"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                app:hintEnabled="false">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editText_Delete_User"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/edittextbox"
                                    android:fontFamily="@font/chur"
                                    android:hint="Mevcut şifreyi giriniz..."
                                    android:inputType="textPassword"
                                    android:paddingStart="20dp"
                                    android:textColor="@color/white"
                                    android:textColorHint="#C0C0C0"
                                    android:textCursorDrawable="@null"
                                    android:textSize="14sp"
                                    tools:ignore="RtlSymmetry" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Doğrulama butonu-->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            card_view:cardBackgroundColor="#4CAF50"
                            card_view:cardCornerRadius="10dp">

                            <Button
                                android:id="@+id/Button_delete_user_authenticate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/chub"
                                android:text="Doğrula"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    card_view:cardBackgroundColor="#CE48097C"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/chub"
                            android:text="Şifre Doğrula"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="23sp" />

                        <TextView
                            android:id="@+id/textView_Delete_User_Authenticated"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/chur"
                            android:text="Lütfen onaylamak için kontrol edin."
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <!-- Şifreyi değiştirdiğini onaylama butonu-->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/ButtonDeleteCardView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            card_view:cardBackgroundColor="#C1C1C1"
                            card_view:cardCornerRadius="10dp">

                            <Button
                                android:id="@+id/ButtonDeleteUser"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/chub"
                                android:text="Hesabı Silmeyi Onayla"
                                android:textColor="@color/white"
                                android:textSize="15sp" />


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>
