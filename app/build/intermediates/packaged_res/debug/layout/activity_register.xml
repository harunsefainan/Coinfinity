<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.RegisterActivity">
    
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:elevation="10dp"
        android:visibility="gone"
        android:background="@drawable/bg_round"/>
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        card_view:cardBackgroundColor="#D9440875"
        card_view:cardCornerRadius="20dp"
        android:elevation="1dp">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Kayıt Olmaya Başla"
            android:fontFamily="@font/chub"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yeni "
                android:fontFamily="@font/chub"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Üye"
                android:fontFamily="@font/chub"
                android:textAlignment="center"
                android:textColor="#D2AFFF"
                android:textSize="30sp" />

        </LinearLayout>

        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eri_im_i_in_kay_t_olabilirsiniz_kripto_uygulamas_burada"
            android:textColor="@color/white"
            android:fontFamily="@font/chur"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-posta:"
                android:textColor="@color/white"
                android:fontFamily="@font/chub"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittextbox"
                android:hint="E-posta giriniz..."
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:fontFamily="@font/chur"
                android:textColor="@color/white"
                android:textColorHint="#C0C0C0"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ad Soyad:"
                android:textColor="@color/white"
                android:fontFamily="@font/chub"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittextbox"
                android:hint="Ad Soyad giriniz ..."
                android:inputType="textPersonName"
                android:paddingStart="20dp"
                android:fontFamily="@font/chur"
                android:textColor="@color/white"
                android:textColorHint="#C0C0C0"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Şifre:"
                android:textColor="@color/white"
                android:fontFamily="@font/chub"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittextbox"
                android:hint="Şifre giriniz..."
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/chur"
                android:textColorHint="#C0C0C0"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Şifre Onayla:"
                android:textColor="@color/white"
                android:fontFamily="@font/chub"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittextbox"
                android:hint="Şifreyi tekrar giriniz..."
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:fontFamily="@font/chur"
                android:textColor="@color/white"
                android:textColorHint="#C0C0C0"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:text="Lütfen uyarıları okuyunuz"
                android:fontFamily="@font/chur"
                android:textColor="@color/white" />

        </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="5dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardBackgroundColor="@color/teal_700">

                <Button
                    android:id="@+id/RegisterBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/chub"
                    android:text="Kayıt Ol"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nextToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daha_nce_kay_t_olduysan_z_giri_yapmak_i_in_t_klay_n"
            android:fontFamily="@font/chur"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>